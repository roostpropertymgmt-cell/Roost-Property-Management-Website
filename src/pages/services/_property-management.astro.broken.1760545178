<header data-test="site-header" aria-label="Site Header" style="border-bottom:1px solid #e5e7eb; padding:.75rem 1rem;">
  <div style="display:flex; align-items:center; justify-content:space-between; gap:1rem; flex-wrap:wrap; max-width:1080px; margin:0 auto;">
    <a href="/" style="font-weight:700; font-size:1.1rem; text-decoration:none; color:inherit;">Roost Property Management</a>
    <nav aria-label="Primary" style="display:flex; gap:1rem; flex-wrap:wrap; align-items:center;">
      <a href="/service-areas/" style="text-decoration:none;">Service Areas</a>
      <a href="https://roostpm.rentvine.com/portals/owner/properties" target="_blank" rel="noopener">Owner Portal</a>
      <a href="https://roostpm.rentvine.com/portals/resident/summary" target="_blank" rel="noopener">Tenant Portal</a>
      <a href="https://www.facebook.com/profile.php?id=61561186661549" target="_blank" rel="noopener">Facebook</a>
      <a href="tel:+13019107407" style="padding:.35rem .6rem; border:1px solid #111827; border-radius:.5rem; text-decoration:none;">Call 301-910-7407</a>
    </nav>
  </div>
</header>

---
import Layout from '../../components/Layout.astro';
import ServiceLD from '../../components/Schema/Service.astro';

const jsonLd = [{
  '@context':'https://schema.org',
  '@type':'BreadcrumbList',
  itemListElement:[
    { '@type':'ListItem', position:1, name:'Services', item:'https://www.roostpm.com/services' },
    { '@type':'ListItem', position:2, name:'Property Management', item:'https://www.roostpm.com/services/property-management' },
  ],
}];
---
<Layout title="Property Management Services"
        description="Full-service property management for Anne Arundel County and nearby Maryland areas."
        {jsonLd}>

  <h1 class="text-2xl font-bold mb-4">Property Management</h1>
  <p class="mb-6"><strong>Quick answer:</strong> We handle marketing, screening, leasing, rent collection, maintenance, and owner reporting.</p>

  <section class="grid gap-6 md:grid-cols-3 mb-10">
    <article class="p-4 rounded-lg border">
      <h2 class="font-semibold mb-2">Marketing & Leasing</h2>
      <ul class="list-disc pl-5">
        <li>Pro photos + syndication</li>
        <li>Showings & applications</li>
        <li>Compliant leases</li>
      </ul>
    </article>
    <article class="p-4 rounded-lg border">
      <h2 class="font-semibold mb-2">Operations</h2>
      <ul class="list-disc pl-5">
        <li>Rent collection</li>
        <li>24/7 maintenance</li>
        <li>Vendor management</li>
      </ul>
    </article>
    <article class="p-4 rounded-lg border">
      <h2 class="font-semibold mb-2">Owner Experience</h2>
      <ul class="list-disc pl-5">
        <li>Monthly statements</li>
        <li>Year-end tax docs</li>
        <li>Transparent communication</li>
      </ul>
    </article>
  </section>

  <a href="/service-areas/anne-arundel/annapolis" class="inline-block px-4 py-2 rounded-md bg-black text-white">
    See Annapolis Service Details
  </a>

  <ServiceLD
    name="Property Management"
    description="Full-service management for single-family, townhomes, and small multifamily in Anne Arundel County."
    provider={{ name: 'Roost Property Management, LLC', url: 'https://www.roostpm.com' }} />
</Layout>

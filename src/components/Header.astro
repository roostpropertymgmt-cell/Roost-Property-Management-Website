---
const tagline = "Faster leasing. Fewer surprises.";
---
<header data-test="site-header" class="w-full border-b bg-white">
  <div class="mx-auto max-w-6xl px-6 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.png" alt="Roost Property Management" class="h-8 w-auto" loading="eager" decoding="async" />
      <div class="flex flex-col leading-tight">
        <span class="font-semibold">Roost Property Management</span>
        <span class="text-xs text-slate-500">{tagline}</span>
      </div>
    </a>
    <nav class="flex items-center gap-6 text-sm">
      <a href="/service-areas/" class="hover:underline">Service Areas</a>
      <a href="/services/property-management/" class="hover:underline">Property Management</a>
    </nav>
  </div>
</header>

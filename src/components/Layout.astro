---
/* src/components/Layout.astro */
const {
  title = 'Roost Property Management',
  description = 'Property management in Anne Arundel County and surrounding Maryland areas.',
  url,            // optional absolute URL
  image = '/og-default.jpg'
} = Astro.props;

const canonical =
  typeof url === 'string' && url
    ? url
    : `https://roost-property-management-website.pages.dev${Astro.url.pathname}`;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- canonical -->
    <link rel="canonical" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Tailwind (as you had it) -->
    <link rel="stylesheet" href="/src/styles/tailwind.css" />
  </head>
  <body class="min-h-screen bg-white text-slate-900">
    <slot />
  </body>
</html>

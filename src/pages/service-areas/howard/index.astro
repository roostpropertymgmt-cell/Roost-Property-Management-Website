---
import Header from "../../../components/Header.astro";
import FairHousing from "../../../components/FairHousing.astro";
import Footer from "../../../components/Footer.astro";
const title = "Howard County Property Management | Roost Property Management";
const description = "Explore our Howard County, MD service areas starting with Columbia.";
const items = [
  { name: "Columbia", url: "/service-areas/howard/columbia/" }
];
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <script type="application/ld+json" src="/org.json"></script>
    <link rel="manifest" href="/site.webmanifest">
<meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url?.href || ""} />
    <meta property="og:image" content="/logo.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/logo.png" />
    <link rel="canonical" href="/service-areas/howard/" />
  </head>
  <body class="min-h-screen bg-white text-slate-900">
    <Header />
    <main class="mx-auto max-w-4xl px-6 py-12">
      <h1 class="text-3xl font-semibold mb-6">Howard County, MD</h1>
      <ul class="grid gap-4 sm:grid-cols-2" data-test="howard-list">
        {items.map((it) => (
          <li class="border rounded-xl p-4 hover:shadow-sm transition">
            <a class="text-blue-700 hover:underline" href={it.url}>{it.name}</a>
          </li>
        ))}
      </ul>
      <div class="mt-10"><FairHousing /></div>
    </main>
    <Footer />
  </body>
</html>

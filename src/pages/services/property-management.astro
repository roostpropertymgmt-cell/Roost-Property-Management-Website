---
import Analytics from "/src/components/Analytics.astro";
import FairHousing from "/src/components/FairHousing.astro";
import Footer from "/src/components/Footer.astro";

const title = "Property Management Services | Roost Property Management";
const description = "Full-service property management across Anne Arundel County and nearby areas — fast leasing, clear communication, and diligent maintenance.";
import Header from "/src/components/Header.astro";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <Analytics />
  </head>
  <body>
<Header />

    <main>
      <section class="container" style="max-width:1080px; margin:0 auto; padding:1rem;">
        <h1>Property Management Services</h1>
        <p>{description}</p>

        <h2>What we handle</h2>
        <ul>
          <li>Pricing, marketing, and showings</li>
          <li>Applicant screening & lease execution</li>
          <li>Rent collection & owner statements</li>
          <li>Maintenance coordination & inspections</li>
          <li>Compliance with Anne Arundel County requirements</li>
        </ul>

        <h2>Get started</h2>
        <p>Have a rental in Severna Park, Glen Burnie, Pasadena, Annapolis, Millersville, or Odenton? Use the form below and we’ll follow up.</p>
        <!-- Ensure your lead form posts to /api/lead -->
      </section>

      <FairHousing />
      <Footer />
    </main>
  </body>
</html>

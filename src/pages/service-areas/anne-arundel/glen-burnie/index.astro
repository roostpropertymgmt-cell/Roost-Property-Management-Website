---
import Analytics from "/src/components/Analytics.astro";
import FairHousing from "/src/components/FairHousing.astro";
import Footer from "/src/components/Footer.astro";

const title = "Property Management in Glen Burnie, MD | Roost Property Management";
const description = "Trusted property management in Glen Burnie, MD. We lease faster, care for your asset, and keep your cash flow predictable.";

const faqs = [
  { q: "What’s included in property management for Glen Burnie owners?", a: "Marketing, showings, screening, lease execution, rent collection, maintenance, inspections, compliance, and owner reporting." },
  { q: "How do you price rentals in Glen Burnie?", a: "We use comparable rentals, absorption, seasonality, and condition to recommend a price that balances speed and yield." },
  { q: "Do you handle Section 8 / voucher tenants?", a: "Yes—within fair housing and local compliance. We follow all program requirements and schedule inspections as needed." },
  { q: "How are maintenance approvals handled?", a: "We follow your approval thresholds. Emergencies are handled immediately; non-urgent work is approved per your settings." },
  { q: "What happens if a tenant pays late?", a: "We follow the lease and Maryland law exactly—automated reminders, appropriate notices, and documented steps." },
  { q: "Can you help me prepare my home to rent?", a: "Yes. We provide a readiness checklist and vendor referrals to reduce days-vacant and maximize rent." }
];

const quickAnswers = [
  ["Do you manage across all of Glen Burnie (including Tanyard Shores)?", "Yes—single-family homes, townhomes, and condos throughout Glen Burnie, including communities like Tanyard Shores."],
  ["Do you accept voucher holders?", "Yes—we process vouchers in full compliance with Fair Housing and local program requirements."],
  ["What’s the typical leasing timeline in Glen Burnie?", "Often 14–28 days for well-priced, move-in-ready homes; timing varies by season and property condition."]
];

// JSON-LD
const faqJsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(({ q, a }) => ({
    "@type": "Question",
    "name": q,
    "acceptedAnswer": { "@type": "Answer", "text": a }
  }))
};

const quickFaqJsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": quickAnswers.map(([q, a]) => ({
    "@type": "Question",
    "name": q,
    "acceptedAnswer": { "@type": "Answer", "text": a }
  }))
};

const breadcrumbs = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "/" },
    { "@type": "ListItem", "position": 2, "name": "Service Areas", "item": "/service-areas/" },
    { "@type": "ListItem", "position": 3, "name": "Anne Arundel County", "item": "/service-areas/anne-arundel/" },
    { "@type": "ListItem", "position": 4, "name": "Glen Burnie" }
  ]
};
import Header from "/src/components/Header.astro";
---
import NearbyAreas from "../../../../components/NearbyAreas.astro";


<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <script type="application/ld+json" src="/org.json"></script>
    <link rel="manifest" href="/site.webmanifest">
<script type="application/ld+json" src="/breadcrumbs/anne-arundel/glen-burnie.json"></script>
<meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url?.href || ""} />
    <meta property="og:image" content="/logo.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/logo.png" />
    <script type="application/ld+json" set:html={JSON.stringify(quickFaqJsonLd)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(faqJsonLd)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbs)}></script>
    <Analytics />
  </head>
  <body>
    <Header />
<main>
      <section class="container">
        <h1>Glen Burnie Property Management</h1>
        <p>{description}</p>

        <!-- Quick Answers (single block) -->
        <section aria-label="Quick Answers" style="margin:1.25rem 0; padding:1rem; border:1px solid #e5e7eb; border-radius:0.75rem;">
          <h2 style="margin:0 0 .5rem 0; font-size:1.125rem;">Quick Answers</h2>
          <dl>
            {quickAnswers.map(([q,a]) => (
              <div>
                <dt><strong>{q}</strong></dt>
                <dd>{a}</dd>
              </div>
            ))}
          </dl>
        </section>

        <h2>Frequently Asked Questions</h2>
        <dl>
          {faqs.map(({ q, a }) => (
            <div>
              <dt><strong>{q}</strong></dt>
              <dd>{a}</dd>
            </div>
          ))}
        </dl>
      </section>

      <FairHousing />
      <Footer />
    
    <NearbyAreas items={[{"name":"Pasadena","url":"/service-areas/anne-arundel/pasadena/"},{"name":"Severna Park","url":"/service-areas/anne-arundel/severna-park/"},{"name":"Odenton","url":"/service-areas/anne-arundel/odenton/"}]} />

    <NearbyAreas items={[{"name":"Pasadena","url":"/service-areas/anne-arundel/pasadena/"},{"name":"Severna Park","url":"/service-areas/anne-arundel/severna-park/"},{"name":"Odenton","url":"/service-areas/anne-arundel/odenton/"}]} />
</main>
  </body>
</html>
